generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Order {
    id          Int       @id @default(autoincrement())
    orderNumber String
    date        DateTime  @default(now())
    numProducts Int
    finalPrice  Float
    createdAt   DateTime  @default(now())
    products    Product[]
}

model Product {
    id         Int    @id @default(autoincrement())
    name       String
    unitPrice  Float
    quantity   Int
    totalPrice Float
    order      Order  @relation(fields: [orderId], references: [id])
    orderId    Int
}
